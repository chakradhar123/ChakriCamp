<!DOCTYPE html>
<html>
    <head>
        <title>ChakriCamp</title>
        <meta name="google-site-verification" content="tI_D58P6kUN-eLqS3owT9LtSMqKQXqui5o_0QPVfbeA" />
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
        <link rel="stylesheet" href="/stylesheets/main.css">
    </head>
    <body>
        

<nav class="navbar navbar-expand-md navbar-dark bg-dark mb-4">
        <a class="navbar-brand" href="/">ChakriCamp</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarCollapse" aria-controls="navbarCollapse" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarCollapse">
          <ul class="navbar-nav mr-auto">
                <li class="nav-item <%= typeof page !== 'undefined' && page === 'campgrounds' ? 'active' : '' %>"><a href="/campgrounds" class="nav-link">Home</a></li>
              </ul>
              <ul class="navbar-nav">
                    <% if(!currentUser){ %>
                    <li class="nav-item"><a href="/login" class="nav-link">Login</a></li>
                    <li class="nav-item"><a href="/register" class="nav-link">Sign Up</a></li>
                    <% }else{ %>
                        <li class="nav-item"><a href="#" class="nav-link">Signed in as <%= currentUser.username %></a></li>
                    <li class="nav-item"><a href="/logout" class="nav-link">Logout</a></li>
                    <% } %>
                </ul>
        </div>
      </nav>



<div class="container">
    <% if(error && error.length>0){ %>
  <div class="alert alert-danger" role="alert">
        <%= error %>
        </div>
        <% } %>
    <% if(success && success.length>0){ %>
  <div class="alert alert-success" role="alert">
        <%= success %>
        </div>
        <% } %>
</div>
